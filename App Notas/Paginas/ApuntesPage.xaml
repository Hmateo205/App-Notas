<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Notas.Paginas.ApuntesPage"
             Title="ApuntesPage">

    <StackLayout Padding="10">
        <Label Text="Título" />
        <Entry x:Name="TituloEntry" Placeholder="Ingrese el título de la nota" />

        <Label Text="Descripción" />
        <Editor x:Name="DescripcionEditor" Placeholder="Ingrese la descripción de la nota" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Guardar" Clicked="OnGuardarButtonClicked" />
            <Button Text="Eliminar" Clicked="OnEliminarButtonClicked" />
        </StackLayout>
    </StackLayout>



</ContentPage>