<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Notas.Paginas.InfoPage"
             Title="Info">

    <ScrollView>
        <StackLayout Padding="10">
            <Image Source="lentes.png" 
                   Aspect="AspectFit" 
                   HeightRequest="200" 
                   HorizontalOptions="Center" />

            <Label Text="Hola Mi nombre es Hernan Jurado"
                   FontSize="Title"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

            <Label Text="Esta aplicacion fue creada con .Net Maui, y es una app de notas"
                   FontSize="Medium"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Margin="10" />
        </StackLayout>
    </ScrollView>

</ContentPage>
